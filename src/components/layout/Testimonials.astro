---
import Title from '../Title.astro'
import data from '../../data.json' assert { type: 'json' }
import TestimonialCard from '../TestimonialCard.astro'

const { title, paragraphs, testimonials } = data.Testimonials
---

<article class='w-full bg-light-dark'>
  <article class='lg:max-w-[1500px] lg:m-auto p-8 grid gap-8'>
    <article class='flex lg:flex-row flex-col gap-4 justify-between lg:items-end'>
      <section class='prose-lg'>
        <Title text={title} />
        {paragraphs.map((e) => <p class='prose dark:prose-invert'>{e}</p>)}
      </section>
    </article>
    <section class='not-prose grid grid-cols-1 lg:grid-cols-2 gap-4'>
      {testimonials.map(({ author, profession, quote }) => <TestimonialCard author={author} profession={profession} quote={quote} />)}
    </section>
  </article>
</article>
